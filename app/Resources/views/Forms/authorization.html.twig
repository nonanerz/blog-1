{% extends 'base.html.twig' %}

{% block main %}
<div class="col-lg-12 form">
        <h1>Sign in</h1>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-user">&nbsp;Login</span>
        </button>
        <a href="{{ path('registration') }}"><small class="text-muted">Registration</small></a>
        {{ form_end(form) }}
</div>
{% endblock %}
