{% extends 'base.html.twig' %}

{% block main %}
    <div class="col-lg-12 main">
        <table class="table table-hover">
            <tr>
                <th>Author</th>
                <th>Title</th>
                <th>Image</th>
                <th>Content</th>
                <th>Is published</th>
                <th>Date</th>

            </tr>

            {% for article in articles %}
                <tr>
                    <td>{{ article.author|fullname }}</td>
                    <td>{{ article.title }}</td>
                    <td><img src="{{ asset('includes/img/articles/'~ article.image) }}"></td>
                    <td>{{ article.content }}</td>
                    <td>
                        <a href="{{ path('article_allowed', {'id':article.id}) }}">
                            <button class="btn btn-success"><span class="glyphicon glyphicon-ok">&nbsp;Publicate</span></button>
                        </a>
                    </td>
                    <td>{{ article.createdAt|date }}</td>

                </tr>
            {% endfor %}

        </table>

        <div class="navigation col-md-offset-4">
            {{ knp_pagination_render(articles) }}
        </div>
    </div>
{% endblock %}

